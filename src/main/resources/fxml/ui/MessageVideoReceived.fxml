<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml"   spacing="5" stylesheets="@../../css/ui/main-ui.css">
    <HBox  styleClass="HBoxRight"> 
        <VBox   fx:id="messageBlock"  styleClass="VBoxRight"  > 
            <Label styleClass="nameLabel" fx:id="senderLabel"  text="John Doe" />
            <MediaView fx:id="videoMediaView" preserveRatio="true">
                <media>
                    <Media url="@../videos/sample-video.mp4" />
                </media>
            </MediaView>
            <HBox styleClass="timeHLabel" > 
            	<Label  fx:id="timeLabel" text="12:05" />
            </HBox>
        </VBox>
    </HBox>
</VBox>