<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="5" stylesheets="@../../css/ui/main-ui.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chat_java_tp_client.controllers.MessageFileSendController">
    <HBox styleClass="HBoxRight"> 
        <VBox fx:id="messageBlock" styleClass="VBoxRight"> 
            <Label fx:id="senderLabel" styleClass="nameLabel" text="Moi" />
         <VBox prefWidth="188.0" spacing="2.0" styleClass="contentLabel">
            <children>
               <HBox alignment="CENTER" spacing="5.0">
                  <children>
                     <Label fx:id="fileName" text="test.jpg">
                        <font>
                           <Font name="System Bold Italic" size="9.0" />
                        </font>
                     </Label>
                     <Button fx:id="downloadBtn" mnemonicParsing="false" onMouseClicked="#onActionBtn" prefHeight="26.0" prefWidth="83.0" style="-fx-background-color: #031c30;" text="Telecharger" textFill="WHITE">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font></Button>
                  </children>
               </HBox>
               <Hyperlink fx:id="hyperLink" minWidth="-Infinity" onAction="#onActionLink" text="Ouvrir le dossir">
                  <font>
                     <Font size="11.0" />
                  </font>
               </Hyperlink>
            </children>
         </VBox> 
             <HBox styleClass="timeHLabel"> 
            	<Label fx:id="timeLabel" text="12:05" />
            </HBox>
        </VBox>
    </HBox>
</VBox>
